<%= div_for comment do %>
  <p>
    <strong>
      Posted <%= time_ago_in_words(comment.created_at) %> ago
    </strong>
    <br/>
    <%= comment.body %>
  </p>
  <p>
  	<%= button_to 'Delete', [comment.post, comment],
               :method => :delete,
               :class=>:destroy,
               remote: true,
               data: { confirm: 'Are you sure?' }
                %>

  </p>
<% end %>