<%= div_for comment do %>
  <p>
    <strong>
      Posted <%= time_ago_in_words(comment.created_at) %> ago
    </strong>
    <br/>
    <i><%= comment.name %>:</i>
    <%= comment.body %>
  </p>
  <p>
    <% if logged_in? %>
  	  <%= button_to 'Delete', [comment.post, comment],
               :method => :delete,
               :class=> 'link-button',
               remote: true,
               data: { confirm: 'Are you sure?' }
                %>
    <% end %>

  </p>
<% end %>