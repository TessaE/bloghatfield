<section class="yellow log-in">
  <h2>Log in</h2>
  <% if logged_in? %>
  	<p>You are already logged in</p>
  <% else %>
    <div>
      <%= form_for(:session, url: admin_path) do |f| %>

        <div class="input-thing">
          <%= f.label :username %>
          <%= f.text_field :username, class: 'form-control' %>
        </div>

        <div class="input-thing">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <%= f.submit "Log in", class: "button" %>
      <% end %>
    </div>
  <% end %>
</section>